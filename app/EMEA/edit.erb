<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @emea.name %></h1>
    <a href="<%= url_for :action => :show, :id => @emea.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @emea.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @emea.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="emea[name]" class="fieldLabel">Name</label>
            <input type="text" id="emea[name]" name="emea[name]" value="<%= @emea.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emea[type]" class="fieldLabel">Type</label>
            <input type="text" id="emea[type]" name="emea[type]" value="<%= @emea.type %>" <%= placeholder( "Type" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
