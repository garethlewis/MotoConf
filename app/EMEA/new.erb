<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @emea.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @emea.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="emea[name]" class="fieldLabel">Name</label>
            <input type="text" id="emea[name]" name="emea[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="emea[type]" class="fieldLabel">Type</label>
            <input type="text" id="emea[type]" name="emea[type]" <%= placeholder("Type") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
