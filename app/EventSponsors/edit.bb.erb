<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @eventsponsors.object %>
    <h1>Edit <%= @eventsponsors.type%></h1>
    <%= link_to "Delete", :action => :delete, :id => @eventsponsors.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @eventsponsors.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Type: </td>
              <td class="itemValue"><input type="text" name="eventsponsors[type]" value="<%= @eventsponsors.type %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="eventsponsors[name]" value="<%= @eventsponsors.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Image: </td>
              <td class="itemValue"><input type="text" name="eventsponsors[image]" value="<%= @eventsponsors.image %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Text: </td>
              <td class="itemValue"><input type="text" name="eventsponsors[text]" value="<%= @eventsponsors.text %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
