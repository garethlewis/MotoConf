<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @eventsponsors.type %></h1>
    <a href="<%= url_for :action => :show, :id => @eventsponsors.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @eventsponsors.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @eventsponsors.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="eventsponsors[type]" class="fieldLabel">Type</label>
            <input type="text" id="eventsponsors[type]" name="eventsponsors[type]" value="<%= @eventsponsors.type %>" <%= placeholder( "Type" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="eventsponsors[name]" class="fieldLabel">Name</label>
            <input type="text" id="eventsponsors[name]" name="eventsponsors[name]" value="<%= @eventsponsors.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="eventsponsors[image]" class="fieldLabel">Image</label>
            <input type="text" id="eventsponsors[image]" name="eventsponsors[image]" value="<%= @eventsponsors.image %>" <%= placeholder( "Image" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="eventsponsors[text]" class="fieldLabel">Text</label>
            <input type="text" id="eventsponsors[text]" name="eventsponsors[text]" value="<%= @eventsponsors.text %>" <%= placeholder( "Text" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
