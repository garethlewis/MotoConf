<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @faq.object %>
    <h1>Edit <%= @faq.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @faq.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @faq.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="faq[id]" value="<%= @faq.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Question: </td>
              <td class="itemValue"><input type="text" name="faq[question]" value="<%= @faq.question %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Answer: </td>
              <td class="itemValue"><input type="text" name="faq[answer]" value="<%= @faq.answer %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
