<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @faq.id %></h1>
    <a href="<%= url_for :action => :show, :id => @faq.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @faq.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @faq.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="faq[id]" class="fieldLabel">Id</label>
            <input type="text" id="faq[id]" name="faq[id]" value="<%= @faq.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="faq[question]" class="fieldLabel">Question</label>
            <input type="text" id="faq[question]" name="faq[question]" value="<%= @faq.question %>" <%= placeholder( "Question" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="faq[answer]" class="fieldLabel">Answer</label>
            <input type="text" id="faq[answer]" name="faq[answer]" value="<%= @faq.answer %>" <%= placeholder( "Answer" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
