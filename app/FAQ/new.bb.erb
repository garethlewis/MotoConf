<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New FAQ</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @faq.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="faq[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Question: </td>
                <td class="itemValue"><input type="text" name="faq[question]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Answer: </td>
                <td class="itemValue"><input type="text" name="faq[answer]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
