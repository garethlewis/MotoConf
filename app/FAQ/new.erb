<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @faq.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @faq.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="faq[id]" class="fieldLabel">Id</label>
            <input type="text" id="faq[id]" name="faq[id]" <%= placeholder("Id") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="faq[question]" class="fieldLabel">Question</label>
            <input type="text" id="faq[question]" name="faq[question]" <%= placeholder("Question") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="faq[answer]" class="fieldLabel">Answer</label>
            <input type="text" id="faq[answer]" name="faq[answer]" <%= placeholder("Answer") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
