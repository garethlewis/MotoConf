<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @fullprogramme.object %>
    <h1>Edit <%= @fullprogramme.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @fullprogramme.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @fullprogramme.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="fullprogramme[id]" value="<%= @fullprogramme.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Heading: </td>
              <td class="itemValue"><input type="text" name="fullprogramme[heading]" value="<%= @fullprogramme.heading %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Body: </td>
              <td class="itemValue"><input type="text" name="fullprogramme[body]" value="<%= @fullprogramme.body %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
