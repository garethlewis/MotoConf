<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @fullprogramme.id %></h1>
    <a href="<%= url_for :action => :show, :id => @fullprogramme.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @fullprogramme.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @fullprogramme.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="fullprogramme[id]" class="fieldLabel">Id</label>
            <input type="text" id="fullprogramme[id]" name="fullprogramme[id]" value="<%= @fullprogramme.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="fullprogramme[heading]" class="fieldLabel">Heading</label>
            <input type="text" id="fullprogramme[heading]" name="fullprogramme[heading]" value="<%= @fullprogramme.heading %>" <%= placeholder( "Heading" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="fullprogramme[body]" class="fieldLabel">Body</label>
            <input type="text" id="fullprogramme[body]" name="fullprogramme[body]" value="<%= @fullprogramme.body %>" <%= placeholder( "Body" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
